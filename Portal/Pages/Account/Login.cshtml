@page
@model LoginModel

@{
    ViewData["Title"] = "Digital Library Cloud Services";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-3">
        <form method="post">
            <hr>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ApiKey"></label>
                <input asp-for="Input.ApiKey" class="form-control">
                <span asp-validation-for="Input.ApiKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ApiSecret"></label>
                <input asp-for="Input.ApiSecret" class="form-control">
                <span asp-validation-for="Input.ApiSecret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Log in</button>
            </div>
        </form>
    </div>
</div>